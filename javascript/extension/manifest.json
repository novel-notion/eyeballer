{
    "name": "Eyeballer",
    "version": "0.2",
    "manifest_version": 2,
    "description": "having fun with eyeballs",

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js" ]
        }
    ],

    "browser_action":  {
        "default_icon": "images/icon.png",
        "default_popup": "test.html"
    },
    "background": {
                "scripts":["background.js"],
                "persistent": false
    },
    "permissions": ["activeTab"]
}
